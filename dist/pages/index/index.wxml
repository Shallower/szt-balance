<block>
    <view class="index">
        <view class="content-input">
            <input type="number" value="{{cardNumber}}" bindinput="inputChange" placeholder="输入深圳通卡号(括号前面的数字)" confirm-type="search" />
            <icon class="icon" type="search" color="#409EFF" size="20" bindtap="search"></icon>
        </view>
        <view class="history"><text wx:key="item" class="history-item" bindtap="historySearch" wx:for="{{history}}" wx:for-item="item" wx:for-index="_anonIdx" data-e-tap-so="this" data-e-tap-a-a="{{item}}">{{item}}</text>
        </view>
        <block wx:if="{{cardInfo}}">
            <view class="content-info">
                <view class="content-row"><text>深圳通卡号</text><text>{{cardInfo.cardNumber}}</text>
                </view>
                <view class="content-row"><text>深圳通余额</text><text class="{{cardInfo.cardBalance <= 1 ? 'content-red' : ''}}">{{cardInfo.cardBalance}}元</text>
                </view>
                <view class="content-row"><text>更新时间</text><text>{{cardInfo.updateTime}}</text>
                </view>
                <view class="content-row"><text>卡片有效期</text><text>{{cardInfo.cardValidity}}</text>
                </view>
                <view class="content-row"><text>查询时间</text><text>{{cardInfo.currentTime}}</text>
                </view>
            </view>
        </block>
    </view>
</block>